@*@model IEnumerable<City>*@
@*@model CityViewModel*@
@model List<City>

@{
    ViewData["Title"] = "Index Cities";
}

<h1>City List</h1>

<a asp-action="Create" class="btn btn-primary mt-4 mb-4">Add new city</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>City</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (City city in Model)
        {
            <tr>
                <td>@city.Id</td>
                <td>@city.CityName</td>
                <td>@city.Country.Name</td>
                @*<td>  @Html.DisplayFor(modelItem => city.Id)</td>
                    <td>   @Html.DisplayFor(modelItem => city.CityName)</td>
                    <td>   @Html.DisplayFor(modelItem => city.Country.Name)</td>*@
                <td>
                    <a asp-action="Edit" asp-controller="City" asp-route-id="@city.Id" class="mr-4 text-warning">Edit  &#187;</a>

                    <a asp-action="Delete" asp-controller="City" asp-route-id="@city.Id" class="mr-4 text-danger">Delete  &#187;</a>
                </td>


            </tr>
        }
    </tbody>
</table>