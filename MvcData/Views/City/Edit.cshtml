@model CreateCityViewModel

@{
    ViewData["Title"] = "Edit city";
}

<h1  class="mb-3">Edit City</h1>
<div class="w-50  mx-auto">
    <form asp-action="Edit" method="post" asp-route-id="@ViewBag.Id">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CityName" class="control-label">City</label>
            <input type="text" class="form-control" asp-for="CityName">
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
               
        <a asp-action="Index" class="btn btn-info mr-2">Back to City List</a>
        <button class="btn btn-primary">Update</button>

    </form>
</div>
