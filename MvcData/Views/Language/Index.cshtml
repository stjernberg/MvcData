

@model List<Language>
@{
    ViewData["Title"] = "Index Languages";
}

<h1 class="mb-4">Languages</h1>



    <table class="table table-striped table-hover table-border my-table">
        <thead>
            <tr>
                <th >#</th>
                <th >Language</th>
                <th ></th>
                <th ></th>
            </tr>
        </thead>
        <tbody>

            @foreach (Language language in Model)
            {
                <tr>
                    <td>@language.Id</td>
                    <td> @language.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Language" asp-route-id="@language.Id" class=" text-warning"><i class="fas fa-edit  mr-1"></i>Edit</a>
                    </td>
                    <td class="w-auto">
                        <a asp-action="Delete" asp-controller="Language" asp-route-id="@language.Id" class=" text-danger"><i class="fas fa-trash-alt mr-1"></i>Delete </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div class="d-flex align-items-center justify-content-center">
        <h3 class="mr-2 mt-4">
            <a asp-action="Create" class=" mt-4 mb-4 text-decoration-none text-primary">
                Add a language
                <i class="fas fa-plus fa-lg"></i>
            </a>
        </h3>
    </div>
