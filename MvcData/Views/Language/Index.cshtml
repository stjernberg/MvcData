

@model List<Language>
@{
    ViewData["Title"] = "Index Countries";
}

<h1>Languages</h1>

<a asp-action="Create" class="btn btn-primary mt-4 mb-4">Add new language</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Language</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (Language language in Model)
        {
            <tr>
                <td>@language.Id</td>
                <td> @language.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Language" asp-route-id="@language.Id" class="mr-4 text-warning">Edit  &#187;</a>
                    <a asp-action="Delete" asp-controller="Language" asp-route-id="@language.Id" class=" text-danger">Delete  &#187;</a>
                </td>


            </tr>
        }
    </tbody>
</table>
