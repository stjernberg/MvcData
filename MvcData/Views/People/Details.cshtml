@model Person
@{
    ViewData["Title"] = "Details";
}



<div class="card mt-5 mx-auto" style="width: 20rem;">
    <div class="card-header bg-info text-white">
        Person Details
    </div>
    <div className="card-body">
      
        <p class="card-text mt-2"><span class="font-weight-bold">Name:</span> @Model.Name</p>
        <p class="card-text"><span class="font-weight-bold">City:</span> @Model.City.CityName</p>
        <p class="card-text"><span class="font-weight-bold">Country:</span> @Model.City.Country.Name</p>
        <p class="card-text mb-2"><span class="font-weight-bold">Phone nr:</span> @Model.PhoneNr</p>
    </div>
    <div class="d-flex justify-content-center mb-3">
        <a asp-action="Index" class="btn btn-primary  mt-4 mr-3">Back.</a>
        <a class="btn btn-danger mt-4 ml-3" asp-controller="People" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>
    <div className="card-footer"></div>
</div>



