@model Person
@{
    ViewData["Title"] = "Details";
}



<div class="card mt-5 mb-4 mx-auto" style="width: 20rem;">
    <div class="card-header bg-info text-white">
        Person Details
    </div>
    <div className="card-body">

        <p class="card-text mt-2"><span class="font-weight-bold">Name:</span> @Model.Name</p>
        <p class="card-text"><span class="font-weight-bold">City:</span> @Model.City.CityName</p>
        <p class="card-text"><span class="font-weight-bold">Country:</span> @Model.City.Country.Name</p>
        <p class="card-text mb-2"><span class="font-weight-bold">Phone nr:</span> @Model.PhoneNr</p>
    </div>
    <div class="d-flex justify-content-center mb-3">
        <a asp-action="Index" class="btn btn-primary  mt-4 mr-3">Back.</a>
        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
        {
            <a class="btn btn-danger btn-xs mt-4 ml-3" asp-controller="People" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        }
    </div>


    <a asp-action="LanguageConnection" asp-controller="People" asp-route-id="@Model.Id" class="mt-6 waves-effect waves-light font-weight-bold mb-3 text-decoration-none text-secondary">Languages connected to  @Model.Name<i class="fas fa-hand-point-right ml-1 fa-lg"></i></a>
    <div className="card-footer"></div>
</div>


