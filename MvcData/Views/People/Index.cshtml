
@model List<Person>


<h1 class="mb-4">People List</h1>


<table class="table table-striped table-hover mt-4  ">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>Country</th>
            <th ></th>
            <th ></th>
            <th ></th>
        </tr>
    </thead>
    <tbody>

        @foreach (Person person in Model)
        {
            <partial name="_PeopleDisplay" model="person" />

        }

    </tbody>
</table>

<div class="d-flex align-items-center justify-content-center">
    <h3 class="mr-2  mt-4">
        <a asp-action="Create" class=" mt-4 mb-4 text-decoration-none text-primary" >
            Add a person
            <i class="fas fa-plus fa-lg"></i>
        </a>
    </h3>
</div>


<div class=" mt-5 w-50 ml-5 mx-auto">
    <form class="form-group" asp-action="Index" asp-controller="People" method="post">
        <label for"search" class="mr-1 ">Search list by:</label>
        <div class="form-check" mb-3 width-50">
            <label for="name">Name</label>
            <input checked="checked"
                   class="mr-3 "
                   id="type"
                   name="type"
                   type="radio"
                   value="name" />
            <label for="city">City</label>
            <input id="type"
                   class="mr-3 "
                   name="type"
                   type="radio"
                   value="city" />
            <label for="country">Country</label>
            <input id="type"
                   name="type"
                   type="radio"
                   value="country" />
        </div>
        <div class="input-group mt-2">
            <input class="form-control " type="text" id="search" name="search" />
            <button type="submit" class="btn btn-info">Search</button>
        </div>
    </form>


    <form class="form-group mt-5 " asp-action="SortList">
        <div class="input-group">
            <select name="sorting" id="sorting" class="form-control mb-2">
                <option value="nameAsc">Name asc</option>
                <option value="nameDes">Name des</option>
                <option value="cityAsc">City asc</option>
                <option value="cityDes">City des</option>
            </select>
            <button class="btn btn-info mb-2 ">Sort list</button>
        </div>
    </form>

</div>

<div id="res"></div>
<div id="msg" class="mt-3 mb-3"></div>
