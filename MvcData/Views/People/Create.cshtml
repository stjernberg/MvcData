
@model CreatePersonViewModel

<h1>Add a person</h1>
<div class="d-flex flex-column align-items-center">
<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group col-sm-11">
        <label asp-for="Name"></label>
        <input class="form-control " asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group col-sm-11">
        <label asp-for="PhoneNr"></label>
        <input class="form-control" asp-for="PhoneNr" />
        <span asp-validation-for="PhoneNr"></span>
    </div>
    <div class="form-group  col-sm-11 ">
        <label asp-for="CityId"></label>
        <input class="form-control" asp-for="CityId" />
        <span asp-validation-for="CityId"></span>
    </div>
   
        <button class="btn btn-primary ">Submit</button>
        
</form>
</div>