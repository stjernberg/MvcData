
@model CreatePersonViewModel

<h1>Add a person</h1>
<div class="d-flex flex-column align-items-center">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group col-sm-11">
            <label asp-for="Name"></label>
            <input class="form-control " asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group col-sm-11">
            <label asp-for="PhoneNr"></label>
            <input class="form-control" asp-for="PhoneNr" />
            <span asp-validation-for="PhoneNr"></span>
        </div>
        <div class="form-group">
            
            <label asp-for="CityId"></label>
        <select asp-for="CityId" class="form-control">
            @foreach (City city in Model.Cities)
            {
                <option value="@city.Id">@city.CityName</option>
            }
        </select>
        </div>

        <button class="btn btn-primary mb-4">Submit</button>

    </form>
            <a asp-action="Index" class="mt-6 waves-effect waves-light font-weight-bold mb-3 text-decoration-none text-secondary">Back to list<i class="fas fa-angle-double-right ml-1"></i></a>
    
</div>