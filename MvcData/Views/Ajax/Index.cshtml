
@{
    ViewData["Title"] = "Index";
}

<h1 class=" mb-4">List of people with Ajax</h1>

<div class="form-inline mt-5">
    <button onclick="getPeopleList('@Url.Action("ShowList", "Ajax")')" class="btn btn-primary mr-3">Get list of people</button>
    <input name="id" type="number" step="1" id="idInput" placeholder="Enter id" class="form-control mr-3" />
    <button onclick="postDetailsId('@Url.Action("DetailsAjax", "Ajax")', 'idInput')" class="btn btn-info mr-3">Show details by id</button>
    <button onclick="postDeleteId('@Url.Action("DeleteAjax", "Ajax")', 'idInput')" class="btn btn-danger">Delete by id</button>
</div>
<div id="message" class="mt-3 mb-3"></div>
<div id="result"></div>
