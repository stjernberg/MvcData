@model List<Country>
@{
    ViewData["Title"] = "Index Countries";
}

<h1 class="mb-4">Country List</h1>

<table class="table table-striped table-hover my-table">
    <thead>
        <tr>
            <th>#</th>
            <th>Country</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (Country country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td> @country.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Country" asp-route-id="@country.Id" class=" text-warning"><i class="fas fa-edit  mr-1"></i>Edit </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Country" asp-route-id="@country.Id" class=" text-danger"><i class="fas fa-trash-alt mr-1"></i>Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex align-items-center justify-content-center">
    <h3 class="mr-2  mt-4">
        <a asp-action="Create" class=" mt-4 mb-4 text-decoration-none text-primary">
            Add a country
            <i class="fas fa-plus fa-lg"></i>
        </a>
    </h3>
</div>

