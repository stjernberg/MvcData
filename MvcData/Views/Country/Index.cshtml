@model List<Country>
@{
    ViewData["Title"] = "Index Countries";
}

<h1>Country List</h1>

<a asp-action="Create" class="btn btn-primary mt-4 mb-4">Add new country</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (Country country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td> @country.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Country" asp-route-id="@country.Id" class="mr-4 text-warning">Edit  &#187;</a>
                    <a asp-action="Delete" asp-controller="Country" asp-route-id="@country.Id" class=" text-danger">Delete  &#187;</a>
                </td>


            </tr>
        }
    </tbody>
</table>

